<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" stylesheets="@../css/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.project.PatientDashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10 20; -fx-background-color: #1e293b;" styleClass="topbar">
            <Label style="-fx-text-fill: white; -fx-font-size: 20;" styleClass="app-title" text="CureCoders" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="topPatientName" style="-fx-text-fill: white;" text="Patient Name" />
        </HBox>
    </top>

    <left>
        <VBox prefWidth="220" spacing="10" style="-fx-background-color: #0f172a; -fx-padding: 20 10;" styleClass="sidebar">
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="sidePatientName" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Loading..." />
            </VBox>

            <Separator style="-fx-opacity: 0.2;" />

            <Button maxWidth="Infinity" onAction="#showHome" styleClass="nav-btn" text="ðŸ  Home" />
            <Button maxWidth="Infinity" onAction="#showFindDoctor" styleClass="nav-btn" text="ðŸ” Find Doctor" />
            <Button maxWidth="Infinity" onAction="#showRecords" styleClass="nav-btn" text="ðŸ“œ My Records" />
            <Button maxWidth="Infinity" onAction="#showMyAppointments" styleClass="nav-btn" text="ðŸ“… Appointments" />

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="Infinity" onAction="#handleEditProfile" styleClass="side-btn" text="âš™ Profile" />
            <Button maxWidth="Infinity" onAction="#handleLogout" style="-fx-text-fill: #ffffff;" styleClass="logout-btn" text="ðŸšª Logout" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea">
            <VBox fx:id="homeView" spacing="20" style="-fx-padding: 30;" styleClass="main-content">
                <Label fx:id="welcomeLabel" style="-fx-font-size: 24; -fx-font-weight: bold;" styleClass="welcome-title" text="Welcome Back!" />

                <FlowPane hgap="15" vgap="15">
                    <VBox styleClass="feature-card">
                        <Label text="Upcoming Visits" />
                        <Label fx:id="upcomingCount" styleClass="card-number" text="2" />
                    </VBox>
                    <VBox styleClass="feature-card">
                        <Label text="New Reports" />
                        <Label fx:id="reportsCount" styleClass="card-number" text="1" />
                    </VBox>
                    <VBox styleClass="feature-card">
                        <Label text="Health Score" />
                        <Label style="-fx-font-size: 20;" styleClass="card-number" text="Good" />
                    </VBox>
                </FlowPane>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
