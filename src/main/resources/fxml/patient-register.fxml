<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project.PatientRegisterController"
      stylesheets="@../css/style.css"
      prefWidth="850"
      prefHeight="520">

    <!-- LEFT PANEL -->
    <VBox styleClass="register-left"
          alignment="CENTER"
          spacing="10"
          prefWidth="300">

        <Label text="CureCoders"
               styleClass="app-title"/>

        <Label text="Patient Registration"
               styleClass="big-title"/>

        <Label text="Create your health account"
               styleClass="subtitle"/>

    </VBox>

    <!-- RIGHT PANEL -->
    <VBox styleClass="register-right"
          alignment="CENTER"
          spacing="20"
          prefWidth="550">

        <TextField fx:id="email"
                   promptText="Email"
                   styleClass="input-field"/>

        <TextField fx:id="username"
                   promptText="Username"
                   styleClass="input-field"/>

        <PasswordField fx:id="password"
                       promptText="Password"
                       styleClass="input-field"/>

        <PasswordField fx:id="confirmPassword"
                       promptText="Confirm Password"
                       styleClass="input-field"/>

        <Button text="Create Account"
                styleClass="primary-btn"
                onAction="#handleRegister"/>

        <Hyperlink text="Already have an account? Login"
                   styleClass="link-text"
                   onAction="#goBack"/>

    </VBox>

</HBox>
