<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project.RoleLoginController"
      stylesheets="@../css/style.css"
      prefWidth="900"
      prefHeight="550">

    <!-- LEFT PANEL -->
    <VBox styleClass="left-panel"
          alignment="CENTER"
          spacing="15"
          prefWidth="400">

        <Label text="CureCoders"
               styleClass="app-title"/>

        <Label fx:id="titleLabel"
               text="Login"
               styleClass="big-title"/>

        <Label text="Hospital Management System"
               styleClass="subtitle"/>

    </VBox>

    <!-- RIGHT PANEL -->
    <VBox styleClass="right-panel"
          alignment="CENTER"
          spacing="20"
          prefWidth="500">

        <TextField fx:id="usernameField"
                   promptText="Email"
                   styleClass="input-field"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       styleClass="input-field"/>

        <Button text="Login"
                styleClass="login-btn"
                onAction="#handleLogin"/>

        <Label text="New user?"
               styleClass="normal-text"/>

        <Hyperlink fx:id="registerLink"
                   text="Register"
                   styleClass="link-text"
                   onAction="#openRegister"/>

        <Button text="Back"
                styleClass="back-btn"
                onAction="#goBack"/>

    </VBox>

</HBox>
