<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="SadmanButton" mnemonicParsing="false" onAction="#onclickSadman" text="Sadman" textAlignment="CENTER" textFill="#e40000">
      <font>
         <Font name="Apple SD Gothic Neo Regular" size="13.0" />
      </font>
   </Button>

    <Label fx:id="welcomeText" />
   <Button mnemonicParsing="false" text="Atul" textFill="#00a331" />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
</VBox>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainController">

<left>
    <VBox alignment="CENTER" spacing="20" styleClass="left-pane">
        <Label text="CityCare Hospital" styleClass="hospital-name"/>
        <Label text="Care with Compassion"/>
    </VBox>
</left>

<right>
    <VBox alignment="CENTER" spacing="15" styleClass="login-pane">
        <Label text="Login As"/>
        <Button text="Doctor Login" onAction="#handleDoctorLogin"/>
        <Button text="Patient Login" onAction="#handlePatientLogin"/>
        <Button text="Guest Login" onAction="#handleGuestLogin"/>
    </VBox>
</right>

</BorderPane>

